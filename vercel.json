{
  "version": 2,
  "builds": [
    {
      "src": "Dockerfile",
      "use": "@vercel/docker"
    }
  ],
  "routes": [
    {
      "src": "/webhook",
      "dest": "http://localhost:8000/webhook",
      "methods": ["POST", "GET"]
    }
  ],
  "env": {
    "BOT_ENV": "prod",
    "PORT": "8000"
  }
} 