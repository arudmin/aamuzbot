{
  "version": 2,
  "buildCommand": "chmod +x api/vercel-build.sh && ./api/vercel-build.sh",
  "builds": [
    {
      "src": "api/index.py",
      "use": "@vercel/python"
    }
  ],
  "routes": [
    {
      "src": "/api/webhook",
      "dest": "api/index.py"
    }
  ],
  "env": {
    "BOT_ENV": "prod"
  }
} 